---
import { Picture } from "astro:assets";
import heroImage from "assets/iphone.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 order-1 md:block">
    <Picture
      src={heroImage}
      alt="iPhone showing the StashPay app"
      width={heroImage.width / 2.25}
      densities={[1.5, 2]}
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      StashPay
    </h1>
    <h3
      class="text-xl lg:text-2xl xl:text-3xl lg:tracking-tight xl:tracking-tighter">
      A wallet for freelancers and nomads
    </h3>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
