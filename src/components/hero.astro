        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxl-apple" />
         Download for iOS
      </Link>
      <Link
        size="lg"
        style="outline"
        href="https://github.com/onionmill/stashpay-bin/releases/download/0.1.4/stashpay-0.1.4.apk"
